.container{
  padding: 110rpx 15rpx 15rpx 15rpx;
  box-sizing: border-box;
}
.search-bar{
  background: #fff;width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  border: 1rpx solid #eee;
  padding:10rpx 0;
  box-sizing: border-box;
  margin-top: -95rpx;
  margin-bottom: 15rpx;
  display: flex;
}
.picker-opts{
  display: inline-block;
  text-align: center;padding: 0 25rpx;
  line-height: 60rpx;font-size: 28rpx;
  vertical-align:top;box-sizing: border-box;
  border-right: 1rpx solid #eee;
}
.picker{
  white-space: nowrap;
}
.picker text{
  font-size: 24rpx;color: #aaa;
}
input{
  font-size: 30rpx;color: #555;width: 100%;height: 60rpx;
  line-height: 60rpx;box-sizing: border-box;padding-left: 15rpx;
}
.placeholder{
  font-size: 30rpx;
}

.input-tools{
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
  white-space: nowrap;
  min-width: 160rpx;
  text-align: right;
}
.clear,.cancel{
  display: inline-block;line-height: 60rpx;font-size: 25rpx;text-align: center;vertical-align: top;
}
.cancel{
  padding: 0 25rpx;border-left: 1rpx solid #eee;
}
.clear{
  height: 60rpx;width: 60rpx;
  background: url(data:image/png;base64,) no-repeat center center;background-size: 30rpx 30rpx;
}

.list-detail,.list-city{
  width: 100%;height: 100%;overflow-y: auto;border: 1rpx solid #eee;background: #fff;
}
.list-detail .item{
  border-bottom: 1rpx solid #eee;
  padding: 15rpx 0 15rpx 70rpx;
  background: url(data:image/png;base64,) no-repeat 15rpx center;background-size: 40rpx auto;
}
.list-detail .title{
  font-size: 30rpx;color: #333;line-height: 45rpx;
}
.list-detail .address{
  font-size: 25rpx;color: #aaa;
}

/* 城市列表 */
.list-city{position: relative;}
.py{
  box-sizing: border-box;background: #eee;font-size: 30rpx;color: #aaa;padding:15rpx 25rpx;
}
.fullname{
    box-sizing: border-box;font-size: 35rpx;color: #555;padding:25rpx;border-bottom: 1rpx solid #eee;
}
.city-py{
  position: fixed;top: 50%;right: 0;margin-top: -360rpx;
}
.city-py view{
  font-size: 25rpx;width: 60rpx;height: 12px;line-height: 12px;text-align: center;color: #555;
}
.showPy {
    width: 150rpx;
    height: 150rpx;
    background: rgba(0,0,0,.3);
    border-radius:50%;
    line-height: 150rpx;
    text-align: center;
    font-size:80rpx;
    margin: auto;
    position: absolute;
    top: 0;left: 0;bottom: 0;right: 0;
    z-index: 3;
    color: #333;
    box-shadow: 0 0 50rpx rgba(0,0,0,.2);
}